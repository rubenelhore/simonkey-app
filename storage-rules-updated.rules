rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir acceso a usuarios autenticados (más permisivo)
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // O si quieres ser más específico con los materiales:
    match /materials/{userId}/{notebookId}/{fileName} {
      allow read: if request.auth != null;
      // Permitir escritura si es el propietario o cualquier usuario autenticado
      allow write: if request.auth != null && (
        request.auth.uid == userId ||
        true // Temporalmente permitir a todos los usuarios autenticados
      );
    }
  }
}